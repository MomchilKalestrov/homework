{
    "compilerOptions": {
        "target": "ES6",
        "module": "nodenext",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "rewriteRelativeImportExtensions": true
    },
    "include": ["src", "src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}